@page
@model FoodRegistryApp1.Pages.Foods.EditModel

<h2>Edit Food</h2>

<form method="post">
    <div class="form-group">
        <label for="FoodName">Food Name</label>
        <input type="text" class="form-control" id="FoodName" name="Food.FoodName" value="@Model.Food.FoodName" required />
    </div>
    <div class="form-group">
        <label for="Calories">Calories</label>
        <input type="number" class="form-control" id="Calories" name="Food.Calories" value="@Model.Food.Calories" required />
    </div>
    <div class="form-group">
        <label for="Protein">Protein (g)</label>
        <input type="number" class="form-control" id="Protein" name="Food.Protein" value="@Model.Food.Protein" />
    </div>
    <div class="form-group">
        <label for="Fat">Fat (g)</label>
        <input type="number" class="form-control" id="Fat" name="Food.Fat" value="@Model.Food.Fat" />
    </div>
    <div class="form-group">
        <label for="Carbs">Carbs (g)</label>
        <input type="number" class="form-control" id="Carbs" name="Food.Carbs" value="@Model.Food.Carbs" />
    </div>
    <div class="form-group">
        <label for="Fiber">Fiber (g)</label>
        <input type="number" class="form-control" id="Fiber" name="Food.Fiber" value="@Model.Food.Fiber" />
    </div>
    <div class="form-group">
        <label for="Sugar">Sugar (g)</label>
        <input type="number" class="form-control" id="Sugar" name="Food.Sugar" value="@Model.Food.Sugar" />
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <input type="text" class="form-control" id="Category" name="Food.Category" value="@Model.Food.Category" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
