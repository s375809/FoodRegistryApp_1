@page
@model FoodRegistryApp1.Pages.Foods.DeleteModel

@{
    ViewData["Title"] = "Delete Food";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this food?</h3>
<div>
    <h4>@Model.Food.FoodName</h4>
    <p>Calories: @Model.Food.Calories</p>
    <p>Category: @Model.Food.Category</p>
</div>

<form method="post">
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Page("./Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
